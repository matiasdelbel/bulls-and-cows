<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorAccent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="48dp"
        android:src="@drawable/ic_bulls_cows"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resume_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/session_resume_game"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/create_game"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_game"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/session_create_game"
        app:layout_constraintBottom_toTopOf="@id/best_scores"
        app:layout_constraintLeft_toLeftOf="@id/resume_game"
        app:layout_constraintRight_toRightOf="@+id/resume_game"
        app:layout_constraintTop_toBottomOf="@id/resume_game" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/best_scores"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/session_best_scores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/resume_game"
        app:layout_constraintRight_toRightOf="@+id/resume_game"
        app:layout_constraintTop_toBottomOf="@id/create_game" />

</androidx.constraintlayout.widget.ConstraintLayout>